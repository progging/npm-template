{
  "name": "@progging/npm-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/progging/npm-template.git"
  },
  "version": "0.0.0",
  "description": "A template for making NPM packages with TypeScript, Jest, esbuild, and Prettier, with actions for publishing.",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "npm run bundle && npm run generate-types",
    "bundle": "./node_modules/.bin/esbuild src/index.ts --bundle --platform=node --sourcemap --outfile=dist/index.js",
    "generate-types": "tsc src/index.ts --declaration --emitDeclarationOnly --outDir dist",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "npx eslint . --ext .ts"
  },
  "author": "Robin Foyn",
  "license": "MIT",
  "homepage": "https://github.com/progging/npm-template",
  "keywords": [
    "npm template"
  ],
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "esbuild": "^0.13.15",
    "eslint": "^8.3.0",
    "jest": "^27.3.1",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
